@{
    var nomeView = (string) ViewData["NomeView"];
}
<!DOCTYPE html>
<html lang= "pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Rolê-Top</title>
    <link href="imgrltp/logo.png" rel="icon" type="image/x-icon"/>
        @if("Home".Equals(nomeView))
        {
            <link href="~/css/rltp.css" rel="stylesheet" type="text/css">
        }
        else if("Galeria".Equals(nomeView))
        {
            <link href="~/css/galeria.css" rel="stylesheet" type="text/css">
        }
        
</head>

<body>
    <header>
        <nav>
            <div class="dropdown">
                <button class="dropbtn"> <img id="barranav" src="~/imgrltp/Captura de Tela (42) - Copia.png" alt="Barra de Navegação" title="Barra Nav"/> </button>
                <div class="dropdown-content">
                    
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Home" asp-action="Index" class="active"> Principal </a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" href="formulário.html"> Formulário </a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" href="espaço.html"> Sobre o Espaço </a></li> 
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Galeria" asp-action="Galeria" class="active"> Galeria </a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" href="login.html"> Login </a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" href="dúvidas.html"> Dúvidas </a></li>
                    
                </div>
                
                
            </div>
            
            <img id="minilogo" src="~/imgrltp/logo - Copia.png" alt="Logotipo da Role-Top" title="logo"/>
        </nav>

    </header>

    @RenderBody()
    
                <footer>
                    
                    <section class="rodape">
                        
                        <div id="faqd">
