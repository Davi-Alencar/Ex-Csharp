@model rltpMVC.ViewModels.DashboardViewModel
 <main>

        <div id="cabec">
        <h1>Bem-Vindo</h1>
        <p>Aqui está a lista de eventos</p>
        </div>

        <h2>Eventos Pendentes (@Model.PedidosPendentes)</h2>
        <table id="pedidosp">
                    <tr>
                      <th>Nome</th>
                      <th>Evento</th>
                      <th>Situação</th>
                    </tr>
                    @foreach(var pedido in Model.Agendamentos )
                    {
                        <tr>
                            <td>@pedido.Cliente.Nome</td>
                            <td>@pedido.Evento.tipoEvento</td>
                            <td><a href='@Url.Action("Aprovar", "Pedido", new {id = @pedido.Id})'><i class="fas fa-check"></i></a></td>
                            <td><a href='@Url.Action("Reprovar", "Pedido", new {id = @pedido.Id})'><i class="fas fa-times"></i></a></td>
                        </tr>
                    }

                  </table>

                  
        
        <h2>Histórico de Eventos (10)</h2>

            <table id="pedidos">
                    <tr>
                      <th>Nome</th>
                      <th>Evento</th>
                      <th>Situação</th>
                    </tr>
                    <tr>
                      <td>Alfreds Futterkiste</td>
                      <td>Festa de 15 anos</td>
                      <td>Aprovado!</td>
                    </tr>
                    
                  </table>

    <div id="bcon">
        <a href="rltp.html" class="confirmar">Sair</a>
    </div>
    
    </main>
